<UserControl x:Class="BD_Proj.QuizUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BD_Proj"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="0,0,-151,-28">
        <Label Content="Pytanie:" HorizontalAlignment="Left" Margin="10,9,0,0" VerticalAlignment="Top" Width="53"/>
        <TextBox x:Name="QuestionTextBox" Height="161" Margin="50,40,0,0" TextWrapping="Wrap" Text="Lorem Ipsum jest tekstem stosowanym jako przykładowy wypełniacz w przemyśle poligraficznym. Został po raz pierwszy użyty w XV w. przez nieznanego drukarza do wypełnienia tekstem próbnej książki. Pięć wieków później zaczął być używany przemyśle elektronicznym, pozostając praktycznie niezmienionym. Spopularyzował się w latach 60. XX w. wraz z publikacją arkuszy Letrasetu, zawierających fragmenty Lorem Ipsum, a ostatnio z zawierającym różne wersje Lorem Ipsum oprogramowaniem przeznaczonym do realizacji druków na komputerach osobistych, jak Aldus PageMaker" VerticalAlignment="Top" HorizontalAlignment="Left" Width="391"/>
        <Button x:Name="Answer1Button" Content="Odp #A" HorizontalAlignment="Left" Margin="50,218,0,0" VerticalAlignment="Top" Width="192" RenderTransformOrigin="0.07,0.159" Height="54" Click="Answer1Click"/>
        <Button x:Name="Answer2Button" Content="Odp #B" HorizontalAlignment="Left" Margin="260,218,0,0" VerticalAlignment="Top" Width="181" RenderTransformOrigin="0.07,0.159" Height="54" Click="Answer2Click"/>
        <Button x:Name="Answer3Button" Content="Odp #C" HorizontalAlignment="Left" Margin="50,295,0,-21" VerticalAlignment="Top" Width="192" RenderTransformOrigin="0.07,0.159" Height="54" Click="Answer3Click"/>
        <Button x:Name="Answer4Button" Content="Odp #D" HorizontalAlignment="Left" Margin="260,295,0,-21" VerticalAlignment="Top" Width="181" RenderTransformOrigin="0.07,0.159" Height="54" Click="Answer4Click"/>
        <Button Content="Przerwij Quiz" HorizontalAlignment="Left" Margin="50,365,0,-73" VerticalAlignment="Top" Width="121" Click="AbortButton_Click" Height="36"/>

    </Grid>
</UserControl>
